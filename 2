#include <stdio.h>
#include <string.h>

int indexOf(char text[], char word[]) {
    int textLength = strlen(text);
    int wordLength = strlen(word);

    for (int i = 0; i <= textLength - wordLength; i++) {
  
        if (strncmp(&text[i], word, wordLength) == 0) {
            return i; 
        }
    }
    return -1; 
}

int main() {
    char text[100];
    char word[20];

    printf("Введите строку: ");
    fgets(text, sizeof(text), stdin);
    printf("Введите искомое слово: ");
    scanf("%s", word);

    int index = indexOf(text, word);

    if (index != -1) {
        printf("Слово найдено на индексе: %d\n", index);
    } else {
        printf("Слово не найдено.\n");
    }

    return 0;
}

